#include <bits/stdc++.h>
using namespace std;
#define MOD 10e9 + 7

void solve() {
    int n, k;
    cin >> n >> k;

    int cnt = 0;
    for (int i = 0; i < n; ++i) {
        int x; cin >> x;
        if (x + k <= 5)
            ++cnt;
    }
    cout << cnt / 3 << "\n";
}

int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);

    int T = 1;
    // cin >> T;
    while (T--) {
        solve();
    }

    return 0;
}
