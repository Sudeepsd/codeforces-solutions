#include <bits/stdc++.h>
using namespace std;

void solve() {
    long long n; cin >> n;

    if (n & 1)
        cout << (n / 2) - n << "\n";
    else
        cout << (n / 2);
}

int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);

    int T = 1;
    // cin >> T;
    while (T--) {
        solve();
    }

    return 0;
}
