#include <bits/stdc++.h>
using namespace std;
#define MOD 10e9 + 7

void solve() {
    int n; cin >> n;

    int p = 0, cnt = 0;
    for (int i = 0; i < n; ++i) {
        int x; cin >> x;
        if (x > 0) {
            p += x;
        } else {
            if (p > 0)
                --p;
            else
                ++cnt;
        }
    }
    cout << cnt << "\n";
}

int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);

    int T = 1;
    // cin >> T;
    while (T--) {
        solve();
    }

    return 0;
}
