#include <bits/stdc++.h>
using namespace std;

void solve() {
    int n; cin >> n;
    int arr[n];

    int maxi = 0;
    for (int i = 0; i < n; ++i) {
        cin >> arr[i];
        maxi = max(maxi, arr[i]);
    }
    
    int cnt = 0;
    for (int i = 0; i < n; ++i) {
        cnt += maxi - arr[i];
    }
    cout << cnt << "\n";
}

int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);

    int T = 1;
    // cin >> T;
    while (T--) {
        solve();
    }

    return 0;
}
