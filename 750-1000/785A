#include <bits/stdc++.h>
using namespace std;

void solve() {
    int n; cin >> n;

    unordered_map<string, int> sides = {
        {"Tetrahedron", 4},
        {"Cube", 6},
        {"Octahedron", 8},
        {"Dodecahedron", 12},
        {"Icosahedron", 20},
    };

    int cnt = 0;
    for (int i = 0; i < n; ++i) {
        string s; cin >> s;
        cnt += sides[s];
    }
    cout << cnt << "\n";
}

int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);

    int T = 1;
    // cin >> T;
    while (T--) {
        solve();
    }

    return 0;
}
