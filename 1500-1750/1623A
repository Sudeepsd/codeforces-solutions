#include <bits/stdc++.h>
using namespace std;
#define MOD 10e9 + 7

void solve() {
    int n, m, a, b, x, y;
    cin >> n >> m >> a >> b >> x >> y;

    cout << min(a <= x ? x - a : (n - a) + (n - x), b <= y ? y - b : (m - b) + (m - y)) << "\n";
}

int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);

    int T = 1;
    cin >> T;
    while (T--) {
        solve();
    }

    return 0;
}
