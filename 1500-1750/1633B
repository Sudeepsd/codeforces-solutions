#include <bits/stdc++.h>
using namespace std;
#define MOD 10e9 + 7

void solve() {
    string s;
    cin >> s;

    int ones = 0, zeroes = 0;
    for (char ch : s) {
        if (ch == '1')
            ++ones;
        else
            ++zeroes;
    }

    if (ones == zeroes)
        cout << ones - 1 << "\n";
    else
        cout << min(ones, zeroes) << "\n";
}

int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);

    int T = 1;
    cin >> T;
    while (T--) {
        solve();
    }

    return 0;
}
