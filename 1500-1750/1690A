#include <bits/stdc++.h>
using namespace std;

void solve() {
    int n; cin >> n;

    int h = n / 3;
    if (n % 3 == 0)
        cout << h << " " << h + 1 << " " << h - 1 << "\n";
    else if (n % 3 == 1)
        cout << h << " " << h + 2 << " " << h - 1 << "\n";
    else
        cout << h + 1 << " " << h + 2 << " " << h - 1 << "\n";
}

int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);

    int T = 1;
    cin >> T;
    while (T--) {
        solve();
    }

    return 0;
}
