#include <bits/stdc++.h>
using namespace std;

void solve() {
    int n, q;
    cin >> n >> q;

    long long arr[n];
    for (int i = 0; i < n; ++i)
        cin >> arr[i];
    
    sort(arr, arr + n, greater<>());

    for (int i = 1; i < n; ++i)
        arr[i] += arr[i-1];

    while (q--) {
        int x, y;
        cin >> x >> y;
        if (x-y-1 < 0)
            cout << arr[x-1] << "\n";
        else
            cout << arr[x-1] - arr[x-y-1] << "\n";
    }
}

int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);

    int T = 1;
    // cin >> T;
    while (T--) {
        solve();
    }

    return 0;
}
