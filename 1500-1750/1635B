#include <bits/stdc++.h>
using namespace std;
#define MOD 10e9 + 7

void solve() {
    int n; cin >> n;

    int arr[n];
    for (int i = 0; i < n; ++i)
        cin >> arr[i];

    int cnt = 0;
    for (int i = 1; i < n - 1; ++i) {
        if (arr[i] > arr[i-1] && arr[i] > arr[i+1]) {
            ++cnt;
            if (i == n - 2)
                arr[i+1] = arr[i];
            else
                arr[i+1] = max(arr[i], arr[i+2]);
        }
    }
    
    cout << cnt << "\n";
    for (int i = 0; i < n; ++i)
        cout << arr[i] << " ";
    cout << "\n";
}

int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);

    int T = 1;
    cin >> T;
    while (T--) {
        solve();
    }

    return 0;
}
