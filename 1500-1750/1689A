#include <bits/stdc++.h>
using namespace std;

void solve() {
    int m, n, k;
    cin >> m >> n >> k;

    string a, b;
    cin >> a >> b;

    sort(a.begin(), a.end());
    sort(b.begin(), b.end());

    int i = 0, j = 0;
    int cntA = 0, cntB = 0;

    while (i < m && j < n) {
        if ((a[i] < b[j] && cntA < k) || cntB == k) {
            cout << a[i];
            ++i;
            ++cntA; 
            cntB = 0;
        } else {
            cout << b[j];
            ++j;
            ++cntB;
            cntA = 0;
        }
    }
    cout << "\n";
}

int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);

    int T = 1;
    cin >> T;
    while (T--) {
        solve();
    }

    return 0;
}
