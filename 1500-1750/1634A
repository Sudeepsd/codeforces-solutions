#include <bits/stdc++.h>
using namespace std;
#define MOD 10e9 + 7

void solve() {
    int n, k;
    cin >> n >> k;

    string s;
    cin >> s;

    if (k == 0) {
        cout << 1 << "\n";
        return;
    }

    string rev = s;
    reverse(rev.begin(), rev.end());

    if (s == rev)
        cout << 1 << "\n";
    else
        cout << 2 << "\n";
}

int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);

    int T = 1;
    cin >> T;
    while (T--) {
        solve();
    }

    return 0;
}
