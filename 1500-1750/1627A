#include <bits/stdc++.h>
using namespace std;
#define MOD 10e9 + 7

void solve() {
    int n, m, r, c;
    cin >> n >> m >> r >> c;

    int ans = -1;
    for (int i = 1; i <= n; ++i) {
        for (int j = 1; j <= m; ++j) {
            char ch; cin >> ch;
            if (ch == 'B') {
                if (i == r && j == c)
                    ans = 0;
                else if ((i == r || j == c) && ans != 0)
                    ans = 1;
                else if (ans == -1)
                    ans = 2;
            }
        }
    }
    cout << ans << "\n";
}

int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);

    int T = 1;
    cin >> T;
    while (T--) {
        solve();
    }

    return 0;
}
