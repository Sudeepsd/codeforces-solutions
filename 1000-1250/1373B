#include <bits/stdc++.h>
using namespace std;

void solve() {
    int n, d;
    cin >> n >> d;

    int m; cin >> m;

    for (int i = 0; i < m; ++i) {
        int x, y;
        cin >> x >> y;

        if ((x + y) >= d && (x + y) <= 2*n - d && (x - y) <= d && (x - y) >= -d)
            cout << "YES\n";
        else
            cout << "NO\n";
    }
}

int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);

    int T = 1;
    // cin >> T;
    while (T--) {
        solve();
    }

    return 0;
}
