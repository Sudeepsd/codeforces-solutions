#include <bits/stdc++.h>
using namespace std;
#define MOD 10e9 + 7

void solve() {
    int n, x;
    cin >> n >> x;
    int arr[n];

    for (int i = 0; i < n; ++i)
        cin >> arr[i];

    int l = 0, r = 0, ans = 0;
    int arraySum = 0;

    while (r < n) {
        arraySum += arr[r];
        while (l < n && arraySum % x == 0) {
            arraySum -= arr[l];
            ++l;
        }

        ans = max(ans, r - l + 1);
        ++r;
    }

    cout << (ans != 0 ? ans : -1);
}

int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);

    int T = 1;
    cin >> T;
    while (T--) {
        solve();
        cout << "\n";
    }

    return 0;
}
