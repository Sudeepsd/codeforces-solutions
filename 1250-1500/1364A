#include <bits/stdc++.h>
using namespace std;
#define MOD 10e9 + 7

void solve() {
    int n, x;
    cin >> n >> x;
    int arr[n];

    int total = 0;
    for (int i = 0; i < n; ++i) {
        cin >> arr[i];
        total += arr[i];
    }

    if (total % x != 0) {
        cout << n;
        return;
    }

    int l = -1;
    for (int i = 0; i < n; ++i) {
        if (arr[i] % x != 0) {
            l = n - i - 1;
            break;
        }
    }

    if (l == -1) {
        cout << -1;
        return;
    }

    int r = -1;
    for (int i = n - 1; i >= 0; --i) {
        if (arr[i] % x != 0) {
            r = i;
            break;
        }
    }

    cout << max(l, r);
}

int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);

    int T = 1;
    cin >> T;
    while (T--) {
        solve();
        cout << "\n";
    }

    return 0;
}
