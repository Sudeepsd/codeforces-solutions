#include <bits/stdc++.h>
using namespace std;

void solve() {
    int n; cin >> n;

    int total = 0;
    bool hasOne = false;
    for (int i = 0; i < n; ++i) {
        int x; cin >> x;
        total += x;
        if (x == 1)
            hasOne = true;
    }

    if (total % 2 != 0 || (((total / 2) & 1) && !hasOne)) {
        cout << "NO\n";
    } else {
        cout << "YES\n";
    }
}

int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);

    int T = 1;
    cin >> T;
    while (T--) {
        solve();
    }

    return 0;
}
