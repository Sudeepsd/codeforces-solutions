#include <bits/stdc++.h>
using namespace std;

void solve() {
    int n; cin >> n;
    
    cout << n / 2 << "\n";
    if (n % 2 == 0) {
        for (int i = 0; i < n / 2; ++i)
            cout << "2 ";
        cout << "\n";
    } else {
        for (int i = 1; i < n / 2; ++i)
            cout << "2 ";
        cout << "3\n";
    }
}

int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);

    int T = 1;
    // cin >> T;
    while (T--) {
        solve();
    }

    return 0;
}
