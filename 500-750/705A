#include <bits/stdc++.h>
using namespace std;

void solve() {
    int n; cin >> n;

    for (int i = 1; i < n; ++i) {
        if (i & 1)
            cout << "I hate that ";
        else
            cout << "I love that ";
    }
    
    if (n & 1)
        cout << "I hate it\n";
    else
        cout << "I love it\n";
}

int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);

    int T = 1;
    // cin >> T;
    while (T--) {
        solve();
    }

    return 0;
}
